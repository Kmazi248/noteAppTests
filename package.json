{
  "name": "webdriverio-appium",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "wdio": "wdio run ./wdio.conf.js",
    "test:android": "wdio ./config/wdio.conf.js",
    "test:android:spec": "wdio ./config/wdio.conf.js --spec",
    "test:android:dev": "cross-env ENV_NAME=dev wdio ./config/wdio.conf.js",
    "test:android:sit": "cross-env ENV_NAME=sit wdio ./config/wdio.conf.js",
    "report:gen": "powershell -NoProfile -Command \"Remove-Item Env:JAVA_HOME -ErrorAction SilentlyContinue; npx allure generate reports/allure-results --clean -o reports/allure-report\"",
    "report:open": "powershell -NoProfile -Command \"Remove-Item Env:JAVA_HOME -ErrorAction SilentlyContinue; npx allure open reports/allure-report\"",
    "report": "npm run report:gen && npm run report:open",
     "test:sit:smoke": "cross-env ENV_NAME=sit wdio ./config/wdio.conf.js --mochaOpts.grep=@smoke",
    "test:dev:smoke": "cross-env ENV_NAME=dev wdio ./config/wdio.conf.js --mochaOpts.grep=@smoke"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "chalk": "^4.1.2"
  },
  "devDependencies": {
    "@wdio/allure-reporter": "^9.20.0",
    "@wdio/appium-service": "^9.19.2",
    "@wdio/cli": "^9.20.0",
    "@wdio/local-runner": "^9.19.2",
    "@wdio/mocha-framework": "^9.19.2",
    "@wdio/shared-store-service": "^9.20.0",
    "@wdio/spec-reporter": "^9.19.2",
    "allure-commandline": "^2.34.1",
    "appium": "^3.0.2",
    "appium-uiautomator2-driver": "^5.0.3",
    "cross-env": "^10.1.0",
    "wdio-wait-for": "^3.1.0"
  }
}
